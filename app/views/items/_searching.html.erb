<% if @items.length > 0 %>
  <div class="col-12 mb-3">
    <div class="border-bottom pb-1">
			<div class="dropdown">
        <button
          class="btn btn-light btn-sm"
          type="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          <%= octicon "settings", class: "mr-1" %>
					Filtrar
				</button>

				<div class="dropdown-menu">
          <h6 class="dropdown-header text-uppercase">
            Ordenar por
          </h6>

          <%= filter_link "price", "Precio" %>
          <%= filter_link "title", "Nombre" %>
          <%= filter_link "created_at", "Fecha de subida" %>
				</div>
			</div>
    </div>
  </div>

  <%= render @items %>

  <div class="col-12 my-4">
    <%= paginate @items %>
  </div>
<% else %>
  <div class="col-12 mt-5">
    <div class="shadow-sm p-3 mb-5 bg-white rounded mt-5">
      <div class="text-center">
        <%= octicon "search", height: 120, class: "text-secondary" %>
      </div>

      <p class="text-center text-secondary m-4">
        No hay resultados para
        <span class="font-weight-bold">
          <%= params[:query] %>
        </span>
      </p>
    </div>
  </div>
<% end %>
