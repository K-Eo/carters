<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-2 mb-4">
  <div class="card">
    <div class="img-wrapper ratio-1-1 border-bottom">
      <div class="img-content">
        <div class="card-img-overlay pt-2 pl-2 pr-2">
          <div class="d-flex align-items-center">
            <div class="mr-auto">
              <span class="card-subtitle mb-0 badge badge-pill badge-success shadow-sm">
                $<%= item.price %> MXN
              </span>
            </div>
          </div>
        </div>

        <% if item.images.attached? %>
          <% image = item.images.last %>
          <%= image_tag image.variant(resize: "300x300"), class: "rounded-top" %>
        <% else %>
          <div class="text-center my-5">
            <%= octicon "file-media", height: 60, class: "text-secondary" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card-body pl-2 pr-1">
      <div class="d-flex align-items-center">
        <h6 class="card-title mb-0 text-uppercase text-truncate w-100">
          <%= item.title %>
        </h6>

        <% if user_signed_in? %>
          <div class="dropdown">
            <button class="btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= octicon "kebab-vertical", height: 25, class: "text-secondary" %>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <%= link_to "Eliminar", item, method: :delete, data: { confirm: "¿Está seguro?" }, class: "dropdown-item" if policy(item).destroy? %>
              <%= link_to "Editar", edit_item_path(item), class: "dropdown-item" if policy(item).edit? %>
            </div>
          </div>
        <% end %>
      </div>

      <p class="text-muted text-truncate w-100 mb-0">
        <small>
          <%= item.description %>
        </small>
      </p>
    </div>
  </div>
</div>
