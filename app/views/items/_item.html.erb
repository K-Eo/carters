<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 mb-4">
  <div class="card">
    <div class="img-wrapper ratio-1-1">
      <div class="img-content">
        <% if item.images.attached? %>
          <% image = item.images.last %>
          <%= image_tag image.variant(resize: "300x300"), class: "rounded-top" %>
        <% else %>
          <div class="text-center my-5">
            <%= octicon "file-media", height: 60, class: "text-secondary" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <h5 class="card-title"><%= item.title%></h5>
      <p class="card-text"><%= item.description %></p>
      <p class="card-text">
        <small class="text-muted">
          $<%= item.price %>MNX
        </small>
      </p>

      <% if policy(item).destroy? %>
        <p>
          <%= link_to "Eliminar", item, method: :delete, data: { confirm: "¿Está seguro?" } %>
        </p>
      <% end %>

      <% if policy(item).edit?%>
        <p>
          <%= link_to "Editar", edit_item_path(item) %>
        </p>
      <% end %>
    </div>
  </div>
</div>
