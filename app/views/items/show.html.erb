<div class="col-12">
  <p>
    <strong>Title:</strong>
    <%= @item.title %>
  </p>
</div>

<div class="col-12">
  <p>
    <strong>Price:</strong>
    <%= @item.price %>
  </p>
</div>

<div class="col-12">
  <p>
    <strong>Description:</strong>
    <%= @item.description %>
  </p>
</div>


<div class="col-12">
  <% if @item.images.attached? %>
    <% @item.images.each do |image| %>
      <%= image_tag image.variant(resize: "150x90") %>
    <% end %>
  <% end %>
</div>

<div class="col-12">
  <%= link_to "Edit", edit_item_path(@item) %> |
  <%= link_to "Back", items_path %>
</div>
