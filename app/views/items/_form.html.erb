<div class="d-flex justify-content-center">
  <div class="shadow-sm p-5 mb-5 bg-white rounded col-6 mt-5">
    <h4 class="mb-4 border-bottom">Nuevo Producto</h4>

    <%= simple_form_for @item do |f| %>
      <%= f.input :title %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.association :category,
                        collection: Category.all,
                        prompt: "Selecciona una categorÃ­a" %>

      <div class="form-group">
        <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/png" %>
      </div>

      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Regresar", items_path, class: "text-dark btn btn-link" %>
    <% end %>
  </div>
</div>
