<div class="d-flex justify-content-center">
  <div class="shadow-sm p-5 mb-5 bg-white rounded col-6 mt-5">
    <h4 class="mb-4 border-bottom">Nueva Portada</h4>

    <%= simple_form_for @slider do |f| %>
      <div class="form-group">
        <div class="form-check">
          <%= f.check_box :active, class: "form-check-input" %>
          <%= f.label :active, class: "form-check-label" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.file_field :image, accept: "image/jpeg, image/png" %>
      </div>

      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Regresar", items_path, class: "text-dark btn btn-link" %>
    <% end %>
  </div>
</div>
