<% if page.current? %>
  <li class="page-item active d-none d-md-inline-block">
    <%= content_tag :a, page, data: { remote: remote }, rel: (page.next? ? "siguiente" : (page.prev? ? "anterior" : nil)), class: "page-link" %>
  </li>
<% else %>
  <li class="page-item d-none d-md-inline-block">
    <%= link_to page, url, remote: remote, rel: (page.next? ? "siguiente" : (page.prev? ? "anterior" : nil)), class: "page-link" %>
  </li>
<% end %>
